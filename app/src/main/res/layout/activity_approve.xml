<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/passA"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trac"
    tools:context=".Activities.Approve">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="344dp"
        android:layout_height="96dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/done_your_registration_is_complete__now_you_will_be_waiting_to_the_admin_approve_it"
        android:fontFamily="sans-serif-light"
        android:lineSpacingExtra="10sp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_mailA"
        android:layout_width="263dp"
        android:layout_height="55dp"
        android:layout_marginTop="100dp"
        android:textAlignment="textStart"
        android:textColor="#EFE9E9"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/tv_motpass"
        android:layout_width="258dp"
        android:layout_height="56dp"
        android:layout_marginTop="76dp"
        android:textAlignment="textStart"
        android:textColor="#F4EFEF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mailA" />

    <Button
        android:id="@+id/bt_home"
        android:layout_width="165dp"
        android:layout_height="57dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/shape2"
        android:shadowColor="#A8A8A8"
        android:text="Home"
        android:textColor="#F3EAEA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_motpass" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="110dp"
        android:layout_height="36dp"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-light"
        android:text="E-mail "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#FFF8F8"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_mailA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.218" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="115dp"
        android:layout_height="31dp"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif-medium"
        android:text="Password"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#F3E0E0"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_motpass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.209"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mailA"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>